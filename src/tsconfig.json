{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "experimentalDecorators": true,
    "baseUrl": "./app",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
